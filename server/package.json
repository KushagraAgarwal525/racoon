{
  "name": "racoon-server",
  "version": "1.0.0",
  "description": "Express server for Racoon app",
  "main": "index.ts",
  "type": "commonjs",
  "scripts": {
    "start": "npx ts-node index.ts",
    "dev": "nodemon --exec ts-node index.ts",
    "build": "tsc && cp -r ../public ./dist/public",
    "serve": "node dist/index.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "firebase": "^11.4.0",
    "firebase-admin": "^11.10.1",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/ws": "^8.5.5",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
